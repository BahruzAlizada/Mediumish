@model RegisterVM

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">

                        <h4>Welcome back!</h4>
                        <h6 class="font-weight-light">Happy to see you again!</h6>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form class="pt-3" method="post">

                            <div class="form-group">
                                <label asp-for="FullName">FullName</label>
                                <div class="input-group">
                                    <input asp-for="FullName" class="form-control form-control-lg border-left-0" placeholder="FullName">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control form-control-lg border-left-0" placeholder="Email">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Username">Username</label>
                                <div class="input-group">
                                    <input asp-for="Username" class="form-control form-control-lg border-left-0" placeholder="Username">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control form-control-lg border-left-0" placeholder="Password">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="CheckPassword">Check Password</label>
                                <div class="input-group">
                                    <input asp-for="CheckPassword" class="form-control form-control-lg border-left-0" placeholder="Check Password">
                                </div>
                            </div>

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label asp-for="IsRemember" class="form-check-label text-muted">
                                        <input asp-for="IsRemember" type="checkbox" class="form-check-input">
                                        Remember me
                                    </label>
                                </div>

                            </div>
                            <div class="my-3">
                                <button type="submit" class="btn btn-secondary">Sign Up</button>
                            </div>

                            @*<div class="text-center mt-4 font-weight-light">
                            Don't have an account? <a href="register-2.html" class="text-primary">Create</a>
                            </div>*@
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 login-half-bg d-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
