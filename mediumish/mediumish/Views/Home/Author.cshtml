@model AuthorVM

<!-- Begin Top Author Page
================================================== -->
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8 col-md-offset-2">
			<div class="mainheading">
				<div class="row post-top-meta authorpage">
					<div class="col-md-10 col-xs-12">
						<h1>@Model.Author.Name</h1>
						<span class="author-description">Founder of <a target="_blank" href="https://www.wowthemes.net">WowThemes.net</a> and creator of <strong>"Mediumish"</strong> theme that you're currently previewing. I professionally develop premium themes, templates & scripts since the Apocalypse (2012). You can reach me out on the social links below.</span>
						<div class="sociallinks"><span class="dot"></span> <a target="_blank" href="https://mail.google.com/mail/u/0/#inbox"><i class="fa fa-google-plus"></i></a></div>
						<a target="_blank" href="https://twitter.com/wowthemesnet" class="btn follow">Follow</a>
					</div>
					<div class="col-md-2 col-xs-12">
						<img class="author-thumb" src="~/assets/img/@Model.Author.Image" alt="Sal">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Top Author Meta
================================================== -->
<!-- Begin Author Posts
================================================== -->
<div class="graybg authorpage">
	<div class="container">
		<div class="listrecent listrelated">
			@foreach(Blog blog in Model.Blogs)
			{
				<!-- begin post -->
				<div class="authorpostbox">
					<div class="card">
						<a asp-action="Detail" asp-route-id="@blog.Id">
							<img class="img-fluid img-thumb" src="~/assets/img/blog/@blog.Image" alt="">
						</a>
						<div class="card-block">
							<h2 class="card-title"><a asp-action="Detail" asp-route-id="@blog.Id">@blog.Title</a></h2>
							<h4 class="card-text">@Html.Raw(blog.Description.Substring(0,120)) ..</h4>
							<div class="metafooter">
								<div class="wrapfooter">
									<span class="meta-footer-thumb">
										<a asp-action="Author" asp-route-id="@blog.Author.Id"><img class="author-thumb" src="~/assets/img/@blog.Author.Image" alt="Sal"></a>
									</span>
									<span class="author-meta">
										<span class="post-name"><a asp-action="Author" asp-route-id="@blog.Author.Id">@blog.Author.Name</a></span><br />
										<span class="post-date">@blog.CreatedTime.ToString("dd MMMM, yyyy")</span><span class="dot"></span>
									</span>
									<span class="post-read-more"><a href="post.html" title="Read Story"><svg class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z" fill-rule="evenodd"></path></svg></a></span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- end post -->
			}			

		</div>
	</div>
</div>
<!-- End Author Posts -->

